<script type="text/javascript">
	function pad(num, size){ return ('000000000' + num).substr(-size); }
	let launchTime = 1498914060000;

	let reachedLaunch = false;
	window.setInterval(function() {
		let currentTime = new Date().getTime();
		let deltaTime = launchTime - currentTime;
		if(deltaTime <= 0 && !reachedLaunch) {
			reachedLaunch = true;
			$("#countdown").hide();
			$(".redditLink").remove();
			$("#amaDescription").append("<h3>Our big Reddit post has started <br>Check it out on Reddit at <a href=\"/NotAnAMA\">/r/Gaming</a></h3>");
		}
		else {
			let deltaHours = Math.floor(deltaTime / 1000 / 60 / 60);
			let deltaMinutes = Math.floor((deltaTime - deltaHours * 3600 * 1000) / 1000 / 60);
			let deltaSeconds = Math.floor((deltaTime - deltaHours * 3600 * 1000 - deltaMinutes * 60 * 1000) / 1000);

			$("#countdown").text(pad(deltaHours, 2) + " Hours, " + pad(deltaMinutes, 2) + " Minutes, " + pad(deltaSeconds, 2) + " Seconds Until the Post Starts!");
		}
	}, 1000);
</script>